<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Iniciar sesion</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
</head>

<body id="loginBody">
    <div class="container py-4 px-3 mx-auto">
        <div class="row">
            <div class="position relative">
                <div id="loginCard" class="card align-items-center position-absolute top-50 start-50 translate-middle">
                    
                    <div class="row align-items-center mt-4">
                        <div class="col-auto mx-auto p-2">
                            <img id="loginLogo" class="img-fluid rounded  " src="/images/logoviadiseno.jpg">
                        </div>
                        
                    </div>
                    
                    <div class="card-body">
                        <form action="/users/<% if (isNew) { %>resetpassword<% } else { %>login<% } %>" method="POST" class="needs-validation">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
                            <% if (isNew) { %>
                                <label for="matriculaInput" class="form-label text-secondary">Matrícula</label>
                                <input type="text" class="form-control form-control-lg mb-3" id="matriculaInput"
                                                    name="matriculaInput" aria-describedby="emailHelp" required>
                                <label for="passwordInput" class="form-label text-secondary">Nueva contraseña</label>
                                <input type="password" class="form-control form-control-lg mb-2" id="passwordInput" name="passwordInput" required>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" onclick="visibleToggle()" value="" id="visibilidad">
                                    <label class="form-check-label text-secondary mb-3" for="visibilidad">
                                        Ver contraseña
                                    </label>
                                </div>
                                <div class="text-center">
                                    <input type="submit" class="btn btn-dark text-center mb-3" value="Restablecer contraseña">
                                </div>

                            <% } else { %>
                                <label for="matriculaInput" class="form-label text-secondary">Matrícula</label>
                                <input type="text" class="form-control form-control-lg mb-3" id="matriculaInput"
                                                    name="matriculaInput" aria-describedby="emailHelp" required>
                                <label for="passwordInput" class="form-label text-secondary">Contraseña</label>
                                <input type="password" class="form-control form-control-lg mb-2" id="passwordInput" name="passwordInput" required>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" onclick="visibleToggle()" value="" id="visibilidad">
                                    <label class="form-check-label text-secondary mb-3" for="visibilidad">
                                        Ver contraseña
                                    </label>
                                </div>
                                
                                <div class="text-center">
                                    <input type="submit" class="btn btn-dark text-center mb-3" value="Iniciar Sesión">
                                        
                                        
                                    
                                    <div class="row">
                                        <a href="/users/resetpassword" class="link-primary">Olvidé mi
                                                        contraseña</a>
                                    </div>
                                    
                                </div>
                            <% } %>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/scriptIVD.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
</body>

</html>