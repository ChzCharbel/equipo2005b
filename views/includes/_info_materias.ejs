<!-- Modal de edición para Grupo -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Editar Grupo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <!-- Añadir el token CSRF como campo oculto -->
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    
                    <!-- Selección de Profesor -->
                    <div class="mb-3">
                        <label for="profesorSelect" class="form-label">Profesor</label>
                        <select id="profesorSelect" class="form-select" name="profesor" required>
                            <option value="">Selecciona un profesor</option>
                            <% for (let profesor of profesores) { %>
                            <option value="<%= profesor.matriculaProfesor%>">
                                <%= profesor.nombreProfesor%>
                            </option>
                            <% } %>
                        </select>
                    </div>              
                
                    <!-- Selección de Salón -->
                    <div class="mb-3">
                        <label for="salonSelect" class="form-label">Salón</label>
                        <select id="salonSelect" class="form-select" name="salon" required>
                            <option value="">Selecciona un salón</option>
                            <% for (let salon of salones) { %>
                            <option value="<%= salon.idSalon%>">
                                <%= salon.idSalon%> (<%=salon.descripcion%>)
                            </option>
                            <% } %>
                        </select>
                    </div>
                </form>

                <!-- Success Message Alert (Hidden by default) -->
                <div id="successAlert" class="alert alert-success mt-3" style="display: none;">
                    Grupo guardado exitosamente
                </div>
            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" id="saveChangesBtn" class="btn btn-primary">Guardar cambios</button>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <% for (let materia of materias) { %>
            <div class="col-sm-6 col-md-3 mb-4"> 
                <div class="card" style="width: 100%;">
                    <img src="/images/95404c.png" class="card-img-top" alt="color" height="150" />
                    
                    <div class="card-body">
                        <h5 class="card-title"><%= materia.name %></h5>
                        <button class="btn btn-primary btn-sm edit-btn" 
                                data-bs-toggle="modal" 
                                data-bs-target="#editModal" 
                                data-id="<%= materia.id %>" 
                                data-name="<%= materia.name %>" 
                                data-profesor="<%= materia.profesor %>" 
                                data-horario="<%= materia.horario %>" 
                                data-salon="<%= materia.salon %>">
                            <i class="bi bi-plus-lg"></i>
                        </button>
                    </div>
                    
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Profesor: <span><%= materia.profesor %></span></li>
                        <li class="list-group-item">Horario: <span><%= materia.horario %></span></li>
                        <li class="list-group-item">Salón: <span><%= materia.salon %></span></li>
                    </ul>
                </div>
            </div>
        <% } %>
    </div>
</div>

<script src="/js/grupos.js"></script>
<script src="/js/scriptIVD.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</body>

</html>