<!-- Modal de edición para Grupo -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Editar Grupo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <input type="hidden" id="grupoId"> <!-- Guarda el ID del grupo -->

                    <!-- Selección de Materia -->
                    <div class="mb-3">
                        <label for="materiaSelect" class="form-label">Materia</label>
                        <select class="form-control" id="materiaSelect"></select>
                    </div>

                    <!-- Selección de Profesor -->
                    <div class="mb-3">
                        <label for="profesorSelect" class="form-label">Profesor</label>
                        <select class="form-control" id="profesorSelect"></select>
                    </div>

                    <!-- Selección de Salón -->
                    <div class="mb-3">
                        <label for="salon" class="form-label">Salón</label>
                        <input type="text" class="form-control" id="salon">
                    </div>

                    <!-- Selección de Horarios por Día -->
                    <div class="mb-3">
                        <label for="lunesSelect" class="form-label">Lunes</label>
                        <select class="form-control horarioSelect" id="lunesSelect"></select>
                    </div>

                    <div class="mb-3">
                        <label for="martesSelect" class="form-label">Martes</label>
                        <select class="form-control horarioSelect" id="martesSelect"></select>
                    </div>

                    <div class="mb-3">
                        <label for="miercolesSelect" class="form-label">Miércoles</label>
                        <select class="form-control horarioSelect" id="miercolesSelect"></select>
                    </div>

                    <div class="mb-3">
                        <label for="juevesSelect" class="form-label">Jueves</label>
                        <select class="form-control horarioSelect" id="juevesSelect"></select>
                    </div>

                    <div class="mb-3">
                        <label for="viernesSelect" class="form-label">Viernes</label>
                        <select class="form-control horarioSelect" id="viernesSelect"></select>
                    </div>

                    <button type="submit" class="btn btn-primary">Guardar cambios</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <% for (let materia of materias) { %>
            <div class="col-sm-6 col-md-3 mb-4"> 
                <div class="card" style="width: 100%;">
                    <img src="/images/95404c.png" class="card-img-top" alt="color" height="150" />
                    
                    <div class="card-body">
                        <h5 class="card-title"><%= materia.name %></h5>
                        <button class="btn btn-primary btn-sm edit-btn" 
                                data-bs-toggle="modal" 
                                data-bs-target="#editModal" 
                                data-id="<%= materia.id %>" 
                                data-name="<%= materia.name %>" 
                                data-profesor="<%= materia.profesor %>" 
                                data-horario="<%= materia.horario %>" 
                                data-salon="<%= materia.salon %>">
                            <i class="bi bi-plus-lg"></i>
                        </button>
                    </div>
                    
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Profesor: <span><%= materia.profesor %></span></li>
                        <li class="list-group-item">Horario: <span><%= materia.horario %></span></li>
                        <li class="list-group-item">Salón: <span><%= materia.salon %></span></li>
                    </ul>
                </div>
            </div>
        <% } %>
    </div>
</div>

<script src="/js/grupos.js"></script>
<script src="/js/scriptIVD.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>