<div class="container">
    <nav class="navbar bg-body-tertiary search-nav">
        <nav class="navbar bg-body-tertiary">
            <p>Buscar materia</p>
            <div class="container-fluid">
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Materia" aria-label="Search" />
                    <button class="btn btn-outline-success" type="submit">
                        Buscar
                    </button>
                </form>
            </div>
        </nav>
    </nav>
    <br />

    <div class="table-responsive">
        <table class="table table-bordered align-middle text-center">
            <thead class="table-light">
                <tr>
                    <th>Materia</th>
                    <th>Profesor</th>
                    <th>Salón</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% for (let materia of materias) { %>
                    <% if (materia.plans[0].degree.name == carrera && materia.plans[0].status == 'active') { %>
                        <tr>
                            <td><%= materia.name %></td>
                            <td>
                                <select class="form-select" name="profesor_<%= materia.id %>">
                                    <option selected disabled class="texto-pequeno">Selecciona un profesor</option>
                                    <% for (let profesor of profesores) { %>
                                        <option value="<%= profesor.matriculaProfesor %>">
                                            <%= profesor.nombreProfesor %>
                                        </option>
                                    <% } %>
                                </select>
                            </td>
                            <td>
                                <select class="form-select" name="salon_<%= materia.id %>">
                                    <<option selected disabled class="texto-pequeno">Selecciona un salón</option>
                                    <% for (let salon of salones) { %>
                                        <option value="<%= salon.idSalon %>">
                                            <%= salon.idSalon %> (<%= salon.descripcion %>)
                                        </option>
                                    <% } %>
                                </select>
                            </td>
                            <td>
                                <button class="btn btn-primary btn-sm">Guardar</button>
                            </td>
                        </tr>
                    <% } %>
                <% } %>
            </tbody>
        </table>
    </div>

    <script src="/js/grupos.js"></script>
    <script src="/js/scriptIVD.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</div>
